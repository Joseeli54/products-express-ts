{
    "compilerOptions": {
        "target": "ES2022",                                  
        "module": "CommonJS",                                
        "esModuleInterop": true,                           
        "forceConsistentCasingInFileNames": true,            
        "strict": true,                                      
        "skipLibCheck": true,
        "rootDir": "./",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "typeRoots": [
            "./src/types",
            "../node_modules/@types"
        ],
    },
    "include": ["src/**/*"]
}